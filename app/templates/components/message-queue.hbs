{{#each nonTimedMessages}}
  {{flash-message
    action='removeMessage'
    type=type
    content=content
    classPrefix=classPrefix
    message=this
  }}
{{/each}}

{{#if currentMessage}}
  {{flash-message
    action='removeMessage'
    type=currentMessage.type
    content=currentMessage.content
    classPrefix=classPrefix
    message=currentMessage
  }}
{{/if}}
