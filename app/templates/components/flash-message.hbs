<dt class="flash-message-icon-wrapper">
  <span class="{{iconClass}}" data-test="flash-icon"></span>

  <span class="hidden" data-test="flash-type">
    {{type}}
  </span>
</dt>

<dd class="flash-message-content" data-test="flash-content">
  {{!-- Allow HTML --}}
  {{{content}}}

  {{!-- Allow block helpers --}}
  {{yield}}
</dd>

{{!-- A close button is shown for non-timed messages --}}

{{#unless message.timed}}
  <div class="flash-message-button-wrapper">
    <button class="button" data-test="flash-button">
      <span class="icon-close"></span>
      <span class="hidden">Close</span>
    </button>
  </div>
{{/unless}}
